{
  "name": "@maplat/tin",
  "version": "0.11.0",
  "exports": "./src/index.ts",
  "importMap": "./import_map.json",
  "tasks": {
    "build": "deno task build:npm",
    "build:npm": "deno run --allow-all scripts/build_npm.ts",
    "test": "deno test --allow-read tests/",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check src/**/*.ts"
  },
  "compilerOptions": {
    "lib": ["ES2022", "DOM"],
    "strict": true
  },
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  }
}