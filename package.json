{
  "name": "@maplat/tin",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "version": "0.12.0",
  "description": "JavaScript library which performs homeomorphic conversion mutually between the coordinate systems of two planes based on the control points.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/maplat_tin.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "browser": "./dist/maplat_tin.js",
      "import": "./dist/maplat_tin.js",
      "require": "./dist/index.cjs"
    },
    "./umd": {
      "default": "./dist/maplat_tin.umd.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "README.ja.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite --host",
    "build": "pnpm run typecheck && cross-env BUILD_MODE=package vite build",
    "typecheck": "tsc --noEmit --allowImportingTsExtensions",
    "prepare": "pnpm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint src tests",
    "prepublishOnly": "pnpm run lint && pnpm run typecheck && pnpm run test && pnpm run build",
    "version:bump": "node scripts/bump-version.js",
    "version:sync": "node scripts/sync-version.js",
    "publish:npm": "node scripts/publish-npm.js",
    "publish:npm:dry": "node scripts/publish-npm.js --dry-run"
  },
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/code4history/MaplatTin.git"
  },
  "author": "Code for History",
  "license": "Maplat Limited License 1.1",
  "bugs": {
    "url": "https://github.com/code4history/MaplatTin/issues"
  },
  "homepage": "https://github.com/code4history/MaplatTin/wiki",
  "keywords": [
    "triangulation",
    "warp",
    "GIS",
    "Maplat",
    "MaplatTin",
    "deno"
  ],
  "dependencies": {
    "@maplat/transform": "github:code4history/MaplatTransform#80fc607",
    "@turf/turf": "^7.3.1",
    "delaunator": "^5.0.1",
    "robust-predicates": "^3.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/delaunator": "^5.0.3",
    "@types/estree": "^1.0.8",
    "@types/geojson": "^7946.0.16",
    "@types/node": "^24.10.4",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "jest-matcher-deep-close-to": "^3.0.2",
    "jsdom": "^27.3.0",
    "prettier": "^3.7.4",
    "robust-segment-intersect": "^1.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vite": "^6.4.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  }
}